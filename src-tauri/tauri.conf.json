{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "물리치료학과 대시보드",
    "version": "2.0.0",
    "identifier": "com.koreapt.dashboard",
    "build": {
        "beforeDevCommand": "",
        "devUrl": "https://physio-materials.web.app",
        "beforeBuildCommand": "",
        "frontendDist": "frontend-stub"
    },
    "app": {
        "withGlobalTauri": false,
        "windows": [
            {
                "title": "물리치료학과 대시보드",
                "url": "https://physio-materials.web.app",
                "width": 1400,
                "height": 900,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "visible": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "app",
            "dmg",
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "macOS": {
            "minimumSystemVersion": "10.13"
        },
        "windows": {
            "nsis": {
                "languages": [
                    "English",
                    "Korean"
                ],
                "displayLanguageSelector": false
            }
        },
        "createUpdaterArtifacts": false
    }
}